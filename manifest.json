{
    "manifest_version": 2,
    "name": "GLO Click&Source",
    "short_name": "Click&Source",
    "description": "Any attachments are sent to Rchilli for parsing and then saved",
    "version": "1.0.5",
    "default_locale": "en",
    "icons": {
        "16": "images/logo16.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    },
    "permissions": [
        "identity",
        "background",
        "https://mail.google.com/",
        "https://inbox.google.com/",
        "https://www.google-analytics.com/",
        "storage"
    ],
    "background": {
        "scripts": ["javascripts/jquery-1.10.2.min.js", "javascripts/rchilli.js", "javascripts/background.js"]
    },
    "content_security_policy": "script-src 'self' https://*.google.com 'unsafe-eval'; object-src 'self'",
    "oauth2": {
        "client_id": "86466949238-ndm677g5ib5p189p0t65d94pqc0073u8.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/gmail.modify"
        ]
    },
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"],
            "css": ["stylesheets/styles.css"],
            "js": ["javascripts/google-analytics-bundle.js", "javascripts/inboxsdk.js", "javascripts/util.js", "javascripts/app.js"]
        }
    ],
    "web_accessible_resources": [
        "images/save.png",
        "images/parse.png"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}