{
    "manifest_version": 2,
    "name": "GLO Recruitment",
    "short_name": "GLO Recruitment",
    "description": "Any attachments are sent to Rchilli for parsing and then saved",
    "version": "1.0",
    "default_locale": "en",
    "icons": {
        "16": "img/logo16.png",
        "48": "img/logo48.png",
        "128": "img/logo128.png"
    },
    "permissions": [
        "identity",
        "background",
        "https://mail.google.com/",
        "https://inbox.google.com/",
        "https://www.google-analytics.com/",
        "storage"
    ],
    "background": {
        "scripts": ["jquery-1.10.2.min.js", "rchilli.js", "background.js", "client.js"]
    },
    "content_security_policy": "script-src 'self' https://*.google.com 'unsafe-eval'; object-src 'self'",
    "oauth2": {
        "client_id": "86466949238-53h1gupka81d97i2e8u2qd5f2dbu43gr.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/gmail.modify"
        ]
    },
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"],
            "css": ["styles.css"],
            "js": ["google-analytics-bundle.js", "inboxsdk.js", "util.js", "app.js"]
        }
    ],
    "web_accessible_resources": [
        "img/save.png",
        "img/parse.png",
        "images/ui-icons_444444_256x240.png",
        "images/ui-icons_ffffff_256x240.png",
        "images/ui-icons_555555_256x240.png",
        "images/ui-icons_777620_256x240.png",
        "images/ui-icons_777777_256x240.png",
        "images/ui-icons_cc0000_256x240.png"
    ],
    "browser_action": {
        
        "default_popup": "popup.html"
    }
}